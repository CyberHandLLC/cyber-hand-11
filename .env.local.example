# SendGrid Email Configuration for Contact Form
# Copy this file to .env.local and fill in your SendGrid API key

# SendGrid API Key
# Get this from your SendGrid account: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Addresses
# The email that will appear as the sender
EMAIL_FROM="Cyber Hand <info@cyber-hand.com>"

# The email address that will receive contact form submissions
CONTACT_EMAIL_RECIPIENT=your-email@example.com

# Site URL (used in emails)
NEXT_PUBLIC_SITE_URL=https://cyber-hand.com
