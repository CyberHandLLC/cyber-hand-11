{
  "name": "cyberhand",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "node -e \"try{require('.husky/check-if-ci.js')}catch(e){console.log('Skipping husky in CI environment')}\" || husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "check-arch": "node check-architecture.js",
    "mcp:build": "docker-compose build",
    "mcp:start": "docker-compose up -d",
    "mcp:stop": "docker-compose down",
    "mcp:validate": "npm run mcp:validate:arch && npm run mcp:validate:dep && npm run mcp:validate:style",
    "mcp:validate:arch": "docker exec -i cyber-handcom-architecture-guard-1 node standalone-server.js < ./mcp-servers/requests/validate-arch.json",
    "mcp:validate:dep": "docker exec -i cyber-handcom-dependency-guard-1 node standalone-server.js < ./mcp-servers/requests/validate-dep.json",
    "mcp:validate:style": "docker exec -i cyber-handcom-style-validator-1 node standalone-server.js < ./mcp-servers/requests/validate-style.json"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@radix-ui/react-accordion": "^1.2.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-email/components": "^0.0.36",
    "@sendgrid/mail": "^8.1.5",
    "@supabase/auth-helpers-nextjs": "^0.9.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/express": "^5.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/semver": "^7.7.0",
    "@vercel/edge": "^1.2.1",
    "body-parser": "^2.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "framer-motion": "^12.6.3",
    "lucide-react": "^0.487.0",
    "mcp": "^1.4.2",
    "next": "15.2.4",
    "nodemailer": "^6.10.0",
    "postmark": "^4.0.5",
    "react": "^19.0.0",
    "react-cookie": "^8.0.1",
    "react-cookie-consent": "^9.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^4.0.7",
    "react-error-boundary": "^5.0.0",
    "react-swipeable": "^7.0.2",
    "schema-dts": "^1.1.5",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "web-vitals": "^4.2.4",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@lhci/cli": "^0.14.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "autoprefixer": "^10",
    "commander": "^13.1.0",
    "critters": "^0.0.23",
    "eslint-config-next": "^15.2.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "ignore-loader": "^0.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "tailwindcss": "^3",
    "ts-jest": "^29.3.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
